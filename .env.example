# ============================================================================
# Ouroboros 环境变量配置示例
# 🐍⭕ "The Eternal Serpent Devours Itself to Be Reborn"
# ============================================================================

# 复制此文件为 .env 并修改为你自己的配置
# cp .env.example .env

# ============================================================================
# 基本配置
# ============================================================================

# 运行模式: web | tui | telegram | cli
OURO_MODE=web

# Web 服务端口
OURO_PORT=8080

# Web 服务主机
OURO_HOST=0.0.0.0

# 数据存储目录
OURO_DATA_DIR=./data

# 日志级别: debug | info | warn | error
OURO_LOG_LEVEL=info

# ============================================================================
# 调度器配置
# ============================================================================

# 启用稳态保护 (资源监控)
OURO_HOMEOSTASIS=true

# CPU 告警阈值 (%)
OURO_CPU_THRESHOLD=80

# 内存告警阈值 (%)
OURO_MEMORY_THRESHOLD=85

# ============================================================================
# 反思系统配置
# ============================================================================

# 启用自动反思
OURO_REFLECTION=true

# 反思间隔 (分钟)
OURO_REFLECTION_INTERVAL=30

# ============================================================================
# 记忆系统配置
# ============================================================================

# 最大记忆条目数
OURO_MAX_MEMORY=10000

# 启用向量搜索 (需要外部向量数据库)
OURO_ENABLE_VECTORIZATION=false

# ============================================================================
# 外部 API 配置 (可选)
# ============================================================================

# OpenAI API 密钥
# OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Telegram Bot Token (用于 Telegram 模式)
# TELEGRAM_BOT_TOKEN=xxxxxxxxxx:xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================================================
# 监控配置 (可选)
# ============================================================================

# Grafana 管理员密码
GRAFANA_ADMIN_PASSWORD=admin

# ============================================================================
# 开发配置
# ============================================================================

# 开发模式端口
OURO_DEV_PORT=8081

# Node 环境
NODE_ENV=production
